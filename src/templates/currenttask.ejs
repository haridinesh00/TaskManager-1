          <li class="nav-item" role="presentation"><a class="nav-link" href="#">More</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main role="main">

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div id="yourjumbo" class="jumbotron">
      <div id="tskheader" class="container mx-auto text-center">
        <h1 class="display-3">Your Tasks</h1>
        <% if (!tasks.length){ %>
        <div id="notask" class="alert alert-info alert-dismissible fade show text-center">
          <strong>Well Done!</strong> You have no remaining tasks.
        </div>
        <% } else{ %>
        <div class="container">
          <div class="row">
            <% tasks.forEach(function(posts){ %>
            <form  action="/currenttask.html?q=<%=posts._id%>" method="POST">
              <div style="border: 1px solid black;">
                <div>
                  <strong><%= posts.Id %></strong>
                  <p><%= posts.Desc %></p>
                  <button>Done</button>
                </div>
              </div>
              <% }) %>
          </div>
          </form>
        </div>
      </div>
      <hr>
    </div> <!-- /container -->
    <%}%>
  </main>

